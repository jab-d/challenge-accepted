<div class="container login-container">
  <div class="columns login-columns">
    <div class="column">
      <div class="field">
        <label class="label">Login</label>
        <div class="control">
          <div class="select is-large login-select">
            <select id="login-users">
              <option>Dorian</option>
              <option>Andrew</option>
              <option>Jessica</option>
              <option>Brandon</option>
            </select>
          </div>
        </div>
      </div>

      <div class="field is-grouped is-grouped-right">

        <p class="control login-control">
          <a class="login-button button is-primary is-large login-button">
            Login
          </a>
        </p>
      </div>


  </div>
</div>
</div>
<script>
  var user = $("#login-users")
  var id;
    $(".login-button").click(function() {
      id = user.val().trim()
      if(id === "Dorian"){
        window.location.href = "/feed?user_id=3";
      }
      if(id === "Andrew"){
        window.location.href = "/feed?user_id=1";        
      }
      if(id === "Brandon"){
        window.location.href = "/feed?user_id=2";        
      }
      if(id === "Jessica"){
        window.location.href = "/feed?user_id=4";        
      }
    });
</script>